- title "Usuário #{@user.name}"

%h2 Usuário #{@user.name}

%p
  %strong Palpites:
  #{@user.bets.count} / #{Game.count}

%p
  %strong Pontos:
  = @user.bets.sum(:points)

%p
  %strong Já pagou a aposta?
  = yes_or_no @user.paid?
  - if @user.paying?
    (aguardando confirmação de pagamento)

%p.links
  - if user_signed_in? && current_user == @user
    = link_to 'Editar', edit_user_registration_path
  = link_to 'Voltar', users_path

%h3 Palpites

%table.nice
  %thead
    %tr
      %th Jogo
      %th{:colspan => 5} Palpite
      %th Pontos
  %tbody
    - for bet in @bets
      %tr{:class => cycle(:odd, :even)}
        %td.small
          #{link_to "##{bet.game.id}", bet.game}, 
          #{bet.game.stage}, 
          #{l bet.game.played_at, :format => :game}
        %td.right
          #{bet.game.team_a.name} #{team_flag(bet.game.team_a)}
          - if !bet.game.group_game? && bet.penalty?
            %br
            %i Penaltys:
        %td.center
          = bet.goals_a
          - if !bet.game.group_game? && bet.penalty?
            %br
            = bet.penalty_goals_a
        %td.center
          x
          - if !bet.game.group_game? && bet.penalty?
            %br
            x
        %td.center
          = bet.goals_b
          - if !bet.game.group_game? && bet.penalty?
            %br
            = bet.penalty_goals_b
        %td.left
          #{team_flag(bet.game.team_b)} #{bet.game.team_b.name}
          - if !bet.game.group_game? && bet.penalty?
            %br
            &nbsp;
        %td.center
          - if bet.points
            = bet.points
          - else
            %i não calculado

