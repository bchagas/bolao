!!!Strict
%html(lang='en' xml:lang='en' xmlns='http://www.w3.org/1999/xhtml')
  %head
    %meta(content='text/html; charset=utf-8' http-equiv='Content-type')

    %link(href='/favicon.ico' rel='icon' type='image/x-icon')

    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'text'
    = stylesheet_link_tag '960'
    = stylesheet_link_tag 'formtastic'
    = stylesheet_link_tag 'formtastic_changes'
    = stylesheet_link_tag 'application'

    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js'
    = javascript_include_tag 'jrails'
    = javascript_include_tag 'application'

    = ie6update

    %title= h(yield(:title) || Settings.site.name)
  %body

    #loading{:style => "display: none;"} Sending...

    .container_16

      #header.grid_16

        .title
          #topmenu
            = render :partial => 'shared/topmenu'

          %h1= link_to Settings.site.name, root_path

        #menu
          = render :partial => 'shared/menu'

      #content.grid_16

        #main.grid_12.alpha
          - flash.each do |name, msg|
            .flash{:id => "flash_#{name}"}
              %span= msg
              = link_to_function 'close', "$('#flash_#{name}').hide();", :class => 'close'

          .inner
            = yield

        #sidebar.grid_4.omega
          = yield(:sidebar)

      #footer.grid_16
        .inner
          %p #{Settings.site.copyright}

    = google_analytics_javascript(Settings.site.google_analytics_id)
