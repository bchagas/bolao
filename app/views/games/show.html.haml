- title "Jogo ##{@game.id}"

%h2 Jogo ##{@game.id}

%h3
  = @game.team_a.name
  = team_flag(@game.team_a)
  = @game.goals_a
  x
  = @game.goals_b
  = team_flag(@game.team_b)
  = @game.team_b.name

- if !@game.group_game? && @game.penaltys?
  %h4
    Pênaltis:
    = @game.team_a.name
    = team_flag(@game.team_a)
    = @game.penalty_goals_a
    x
    = @game.penalty_goals_b
    = team_flag(@game.team_b)
    = @game.team_b.name

%p
  %strong Fase:
  = @game.stage

%p
  %strong Data:
  = l @game.played_at, :format => :game

%p
  %strong Local:
  #{@game.stadium}, #{@game.city}

%p.links
  - if admin_signed_in?
    = link_to 'Editar', edit_game_path(@game), '|'
  = link_to 'Voltar', games_path

%h2 Apostas

%table.nice
  %thead
    %tr
      %th Usuário
      %th Palpite
      %th
  %tbody
    - for bet in @bets
      %tr{:class => cycle(:odd, :even)}
        %td= link_to bet.user.name, bet.user
        %td
          %span.goals
            %span.team_a #{bet.game.team_a.name} #{team_flag(bet.game.team_a)}
            = bet.goals_a
            x
            = bet.goals_b
            %span.team_b #{team_flag(bet.game.team_b)} #{bet.game.team_b.name}
          - if !bet.game.group_game? && bet.penalty?
            %span.penalty_goals
              Penaltys:
              %span.team_a #{bet.game.team_a.name} #{team_flag(bet.game.team_a)}
              = bet.penalty_goals_a
              x
              = bet.penalty_goals_b
              %span.team_b #{team_flag(bet.game.team_b)} #{bet.game.team_b.name}

